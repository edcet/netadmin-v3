{
  "branches": [
    {
      "name": "main",
      "prerelease": false
    },
    {
      "name": "develop",
      "prerelease": true,
      "channel": "next"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "refactor",
            "scope": "core",
            "release": "minor"
          },
          {
            "breaking": true,
            "release": "major"
          }
        ]
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# netadmin v3.0 Changelog"
      }
    ],
    [
      "@semantic-release/git",
      {
        "message": "chore(release): ${nextRelease.version} [skip ci]",
        "assets": [
          "CHANGELOG.md",
          "VERSION"
        ]
      }
    ],
    "@semantic-release/github"
  ]
}
